<script>
  const form = document.currentScript.previousElementSibling.querySelector('form');
  const boton = form.querySelector('button');
  const input = form.querySelector('input[type="text"]');

  // Hover del botÃ³n
  boton.addEventListener('mouseover', () => {
    boton.style.backgroundColor = '#2F3A17';
    boton.style.boxShadow = '0 3px 8px rgba(0,0,0,0.3)';
  });
  boton.addEventListener('mouseout', () => {
    boton.style.backgroundColor = '#3B4A1E';
    boton.style.boxShadow = '0 2px 6px rgba(0,0,0,0.2)';
  });

  // Enfocar input: borde verde oscuro y sombra
  input.addEventListener('focus', () => {
    input.style.borderColor = '#3B4A1E';
    input.style.boxShadow = '0 0 6px rgba(59,74,30,0.4)';
  });
  input.addEventListener('blur', () => {
    input.style.borderColor = '#999';
    input.style.boxShadow = 'none';
  });
</script>
